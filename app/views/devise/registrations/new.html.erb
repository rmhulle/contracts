
<div class="border-form-div">
<h2>Registrar</h2>
<br>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {class:"form-signin"}) do |f| %>
  <%= devise_error_messages! %>
    <h2 class="form-signin-heading">Registre-se</h2>

    <%= f.label :name, class: "sr-only" %><br />
    <%= f.text_field :name, autofocus: true, placeholder: "Nome", class: "form-control" %>

    <%= f.label :functional_id, class: "sr-only" %><br />
    <%= f.text_field :functional_id, autofocus: false, placeholder: "MatrÃ­cula", class: "form-control" %>

    <%= f.label :email, class: "sr-only" %><br />
    <%= f.email_field :email, autofocus: false, placeholder: "Email", class: "form-control" %>

    <%= f.label :password, class: "sr-only"%>

    <%= f.password_field :password, autocomplete: "off", placeholder: "Senha",  class: "form-control"  %>

    <%= f.label :password_confirmation, class: "sr-only"%>
    <%= f.password_field :password_confirmation, placeholder: "Confirme sua Senha", autocomplete: "off", class: "form-control"  %>
    </br>
    <%= f.submit "Registrar", class: "btn btn-lg btn-primary btn-block" %>

<% end %>
</div>
